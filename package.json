{
    "name": "job-api",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main.js",
        "build": "nest build",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config test/jest-e2e.config.ts",
        "format": "prettier --write \"src/**/*.ts\"",
        "db:init": "ts-node -r tsconfig-paths/register src/database/scripts/init-db.ts",
        "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
        "migration:generate": "npm run typeorm -- migration:generate src/database/migrations/InitJobOffers --dataSource src/database/data-source.ts",
        "migration:run": "npm run typeorm -- migration:run --dataSource src/database/data-source.ts"
    },
    "dependencies": {
        "@nestjs/axios": "^4.0.1",
        "@nestjs/common": "^11.0.1",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.0.1",
        "@nestjs/platform-express": "^11.0.1",
        "@nestjs/schedule": "^6.0.0",
        "@nestjs/swagger": "^11.2.0",
        "@nestjs/throttler": "^6.4.0",
        "@nestjs/typeorm": "^11.0.0",
        "axios": "^1.10.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "compression": "^1.8.0",
        "dotenv": "^17.2.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1",
        "swagger-ui-express": "^5.0.1",
        "typeorm": "^0.3.25"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.0",
        "@nestjs/testing": "^11.1.3",
        "@types/compression": "^1.8.1",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.10.7",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "eslint": "^9.0.0",
        "eslint-plugin-prettier": "^5.2.2",
        "jest": "^29.7.0",
        "pg": "^8.16.3",
        "prettier": "^3.4.2",
        "supertest": "^7.1.3",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.3"
    }
}
